{
  "private": true,
  "workspaces": [
    "example",
    "use-scroll-navigation"
  ],
  "scripts": {
    "build": "yarn build:hook && yarn build:example",
    "build:example": "yarn workspace example build",
    "build:hook": "yarn workspace use-scroll-navigation build",
    "bump": "yarn workspace use-scroll-navigation bump",
    "dev": "yarn watch",
    "watch": "concurrently -n Hook,Example \"yarn watch:hook\" \"yarn watch:example\"",
    "watch:example": "yarn workspace example start",
    "watch:hook": "yarn workspace use-scroll-navigation watch"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
}
